name: Scheduled Discord Event Reminder

on:
  schedule:
    # 4:30 PM ADT every Wednesday = 7:30 PM UTC
    - cron: '30 19 * * 3'

jobs:
  post-discord-message:
    runs-on: ubuntu-latest
    steps:
      - name: Send event reminder to Discord
        env:
          DISCORD_WEBHOOK: ${{ secrets.DISCORD_WEBHOOK }}
        run: |
          set -e
          RESPONSE=$(curl -s -o /dev/null -w "%{http_code}" \
            -H "Content-Type: application/json" \
            -X POST \
            -d '{"content": "Hello, The Storms Rain Guild members! Our event is Happening in around 30 minutes, we will be doing the event you all voted for last week!"}' \
            "$DISCORD_WEBHOOK")
          if [ "$RESPONSE" -ne 204 ]; then
            echo "Failed to send the Discord message. HTTP status: $RESPONSE"
            exit 1
          fi
