name: Scheduled Discord Event Reminder

on:
  schedule:
    # 4:30 PM ADT every Wednesday = 7:30 PM UTC
    - cron: '30 19 * * 3'

jobs:
  post-discord-message:
    runs-on: ubuntu-latest
    steps:
      - name: Send event reminder to Discord
        run: |
          curl -H "Content-Type: application/json" \
          -X POST \
          -d '{"content": "Hello, The Storms Rain Guild members! Our event is Happening in around 30 minutes, we will be doing the event you all voted for last week!"}' \
          https://discord.com/api/webhooks/1385801724551368919/bSIbxdLo1YeKO78xdyglgOsBkcYKEzCbFMS0j68UF1Hn3UYPoSJcJwVK8dKcL6jqQvx1
